<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity6"
    style="@style/SCREEN">

    <EditText
        android:id="@+id/food"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:hint="Food Item"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/calorie"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="197dp"
        android:hint="calorie"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="75dp"
        android:layout_height="71dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="186dp"
        style="@style/tab"
        android:background="@drawable/ic_twotone_delete_24" />

    <Button
        android:id="@+id/add"
        android:layout_width="73dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="185dp"
        style="@style/tab"
        android:layout_marginEnd="18dp"
        android:background="@drawable/ic_round_add_24" />

    <Button
        android:id="@+id/left"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="279dp"
        android:background="@drawable/ic_round_arrow_left_24" />

    <TextView
        android:id="@+id/t10"
        android:layout_width="36dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="274dp" />

    <TextView
        android:id="@+id/t20"
        android:layout_width="248dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="268dp" />

    <TextView
        android:id="@+id/t30"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="80dp" />

    <Button
        android:id="@+id/right"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginEnd="18dp"
        android:layout_marginBottom="275dp"
        android:background="@drawable/ic_round_arrow_right_24" />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="239dp"
        android:text="show" />

</RelativeLayout>